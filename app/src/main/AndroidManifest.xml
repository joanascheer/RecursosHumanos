<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="br.com.zup.recursoshumanos">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/ic_baseline_attach_money_24"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_baseline_attach_money_24"
        android:supportsRtl="true"
        android:theme="@style/Theme.RecursosHumanos"
        tools:targetApi="31">
        <activity
            android:name=".splash.Splash"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity
            android:name=".main.MainActivity"
            android:exported="false"/>

    </application>

</manifest>